{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "declaration": true,
        "declarationDir": "./dist/"
    }
}